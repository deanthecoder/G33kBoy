<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:viewModels="clr-namespace:G33kBoy.ViewModels"
             x:Class="G33kBoy.Views.App"
             Name="G33kBoy"
             RequestedThemeVariant="Default"
             x:DataType="viewModels:AppViewModel">
    <Application.Styles>
        <FluentTheme />
        <themes:MaterialTheme BaseTheme="Dark" PrimaryColor="BlueGrey" SecondaryColor="Lime" />
        <avalonia:MaterialIconStyles />
        <dialogHostAvalonia:DialogHostStyles />

        <Style Selector="Button">
            <Setter Property="Focusable" Value="False" />
        </Style>
        <Style Selector="ToggleButton">
            <Setter Property="Focusable" Value="False" />
        </Style>
    </Application.Styles>

    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="About G33kBoy" Command="{CompiledBinding AboutCommand}" />
        </NativeMenu>
    </NativeMenu.Menu>
</Application>