      <PackageReference Include="SharpHook" Version="5.2.3" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\DTC.Core\DTC.Core\DTC.Core.csproj" />
    </ItemGroup>

</Project>
